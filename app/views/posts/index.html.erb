<h1>Books</h1>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @posts.each do |post| %>

      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td class="link"><%= link_to "Show", post_path(post.id)%></td>
        <td class="link"><%= link_to "Edit", edit_post_path(post.id)%></td>
        <td class="link"><%= link_to "Destroy", post_path(post.id),method: :delete, 
        "data-confirm" => "本当に削除しますか？" %></td>
      </tr>

 	<% end %>
  </tbody>
</table>
<h2>New book</h2>

<%= form_for(@post) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>
<% end %>
